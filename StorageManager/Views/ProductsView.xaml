<UserControl x:Class="StorageManager.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorageManager"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки действий -->
        <Border Grid.Row="0" 
                Background="#1565C0" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📦" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Управление товарами" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="➕ Новый товар" 
                            Command="{Binding AddProductCommand}"
                            Background="#28a745"
                            Foreground="White"/>

                    <Button Content="🔄 Обновить" 
                            Command="{Binding LoadProductsCommand}"
                            Background="#6c757d"
                            Foreground="White"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть: Список товаров -->
            <Border Grid.Column="0" 
                    Margin="0,0,10,0"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Поиск и фильтры -->
                    <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        Margin="15,15,15,10">

                        <!-- Поиск -->
                        <StackPanel Width="300" Margin="0,0,10,0">
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="White"
                                 BorderBrush="#E0E0E0"
                                 Padding="8"/>
                            <TextBlock Text="Поиск товаров..." 
                                   Margin="10,-55,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="#999"
                                   IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchText}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Фильтр по типу товара -->
                        <StackPanel Orientation="Horizontal" Margin="0, -5,10,0">
                            <ComboBox Width="150" Height="37" 
                                ItemsSource="{Binding ProductTypes}"
                                DisplayMemberPath="ProductTypeName"
                                SelectedItem="{Binding SelectedProductTypeFilter}">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                                <Setter Property="ToolTip" Value="Все типы товаров"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <!-- Кнопка сброса фильтра -->
                            <Button Content="❌" 
                                    Command="{Binding ResetTypeFilterCommand}"
                                    ToolTip="Сбросить все фильтры"
                                    Width="30"
                                    Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Visibility="{Binding HasActiveFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Список товаров -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilteredProducts}"
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              AlternatingRowBackground="#F8F9FA"
                              Margin="15,0,15,15">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding ProductId}" 
                                                Width="50"/>

                            <DataGridTextColumn Header="Наименование" 
                                                Binding="{Binding ProductName}" 
                                                Width="200"/>

                            <DataGridTextColumn Header="Описание" 
                                                Binding="{Binding ProductDescription}" 
                                                Width="250"/>

                            <DataGridTextColumn Header="Тип" 
                                                Binding="{Binding ProductTypeName}" 
                                                Width="120"/>

                            <DataGridTextColumn Header="Кол-во" 
                                                Binding="{Binding ProductQuantity, StringFormat={}{0:N2}}"
                                                Width="80"/>

                            <DataGridTemplateColumn Header="Действия" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Редактировать"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="5"
                                                    Cursor="Hand"/>

                                            <Button Content="🗑️" 
                                                    Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Удалить"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="5"
                                                    Cursor="Hand"
                                                    Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Правая часть: Форма редактирования -->
            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding FormTitle}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Форма -->
                        <StackPanel>
                            <TextBlock Text="Наименование товара *" 
                                       FontWeight="SemiBold"/>
                            <TextBox Text="{Binding CurrentProduct.ProductName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Описание" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,0"/>
                            <TextBox Text="{Binding CurrentProduct.ProductDescription, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"/>

                            <TextBlock Text="Тип товара *" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,0"/>
                            <!-- ComboBox для выбора типа товара - ПРОСТОЙ -->
                            <ComboBox ItemsSource="{Binding ProductTypes}"
                                      DisplayMemberPath="ProductTypeName"
                                      SelectedItem="{Binding CurrentProduct.SelectedProductType}">
                            </ComboBox>

                            <TextBlock Text="Количество *" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,0"/>
                            <TextBox Text="{Binding CurrentProduct.ProductQuantity, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Кнопки формы -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        Margin="0,20,0,0">
                                <Button Content="Отмена" 
                                        Command="{Binding CancelCommand}"
                                        Background="#6c757d"
                                        Foreground="White"/>

                                <Button Content="{Binding SaveButtonText}" 
                                        Command="{Binding SaveProductCommand}"
                                        Background="#28a745"
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Сообщения об ошибках -->
                            <Border Background="#FFEBEE" 
                                    BorderBrush="#EF9A9A" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,20,0,0"
                                    Visibility="Collapsed">
                                <TextBlock Text="{Binding ErrorMessage}" 
                                           Foreground="#D32F2F" 
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>