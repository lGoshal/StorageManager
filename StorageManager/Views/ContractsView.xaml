<UserControl x:Class="StorageManager.Views.ContractsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorageManager"
             xmlns:converters="clr-namespace:StorageManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#1565C0" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📄" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Договоры" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="➕ Новый договор" 
                            Command="{Binding AddContractCommand}"
                            Background="#28a745"
                            Foreground="White"/>

                    <Button Content="🔄 Обновить" 
                            Command="{Binding LoadContractsCommand}"
                            Background="#6c757d"
                            Foreground="White"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Margin="0,0,10,0"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="15,15,15,10">
                        <StackPanel Width="300" Margin="0,0,10,0">
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="White"
                                     BorderBrush="#E0E0E0"
                                     Padding="8"/>
                            <TextBlock Text="Поиск по названию, заказчику или подрядчику..." 
                                       Margin="10,-55,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="#999"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SearchText}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilteredContracts}"
                              SelectedItem="{Binding SelectedContract}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              AlternatingRowBackground="#F8F9FA"
                              Margin="15,0,15,15">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding ContractsID}" 
                                                Width="40"/>

                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding ContractsName}" 
                                                Width="250"/>

                            <DataGridTextColumn Header="Заказчик" 
                                                Binding="{Binding CustomerName}" 
                                                Width="180"/>

                            <DataGridTextColumn Header="Подрядчик" 
                                                Binding="{Binding ContractorName}" 
                                                Width="180"/>

                            <DataGridTextColumn Header="Стоимость" 
                                                Binding="{Binding ContractsValue, StringFormat={}{0:N2} ₽}" 
                                                Width="100"/>

                            <DataGridTextColumn Header="Срок" 
                                                Binding="{Binding ContractsTimeOfAction}" 
                                                Width="80"/>

                            <DataGridTextColumn Header="Ед. изм." 
                                                Binding="{Binding ExpirationDateUnitName}" 
                                                Width="80"/>

                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Command="{Binding DataContext.EditContractCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Редактировать"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="5"
                                                    Cursor="Hand"/>

                                            <Button Content="🗑️" 
                                                    Command="{Binding DataContext.DeleteContractCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Удалить"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="5"
                                                    Cursor="Hand"
                                                    Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding FormTitle}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <StackPanel>
                            <TextBlock Text="Название договора *" 
                                       FontWeight="SemiBold"/>
                            <TextBox Text="{Binding CurrentContract.ContractsName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Объект договора" 
                                       FontWeight="SemiBold"/>
                            <TextBox Text="{Binding CurrentContract.ContractsObject, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     VerticalScrollBarVisibility="Auto"/>

                            <TextBlock Text="Заказчик *" 
                                       FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding Customers}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding CurrentContract.ContractsCustomerID}"
                                      IsEditable="False"/>

                            <TextBlock Text="Подрядчик *" 
                                       FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding Contractors}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding CurrentContract.ContractsContractorID}"
                                      IsEditable="False"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Стоимость (₽) *" 
                                               FontWeight="SemiBold"/>
                                    <TextBox Text="{Binding CurrentContract.ContractsValue, UpdateSourceTrigger=PropertyChanged}"
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Срок действия *" 
                                               FontWeight="SemiBold"/>
                                    <TextBox Text="{Binding CurrentContract.ContractsTimeOfAction, UpdateSourceTrigger=PropertyChanged}"
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Единица измерения срока *" 
                                       FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding Units}"
                                      DisplayMemberPath="UnitOfMeasurementName"
                                      SelectedValuePath="UnitOfMeasurementId"
                                      SelectedValue="{Binding CurrentContract.ContractsExpirationDateUnitID}"
                                      IsEditable="False"/>

                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        Margin="0,20,0,0">
                                <Button Content="Отмена" 
                                        Command="{Binding CancelCommand}"
                                        Background="#6c757d"
                                        Foreground="White"/>

                                <Button Content="{Binding SaveButtonText}" 
                                        Command="{Binding SaveContractCommand}"
                                        Background="#28a745"
                                        Foreground="White"
                                        Margin="10,0,0,0"/>
                            </StackPanel>

                            <Border Background="#FFEBEE" 
                                    BorderBrush="#EF9A9A" 
                                    BorderThickness="1" 
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,20,0,0"
                                    Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{Binding ErrorMessage}" 
                                           Foreground="#D32F2F" 
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>