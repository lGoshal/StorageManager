<Window x:Class="StorageManager.Views.DocumentTypeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор типа документа" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📄 Выберите тип документа" 
                       FontSize="18" 
                       FontWeight="Bold"/>
            <TextBlock Text="Выберите тип документа, который хотите создать"
                       Foreground="#666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Список типов документов -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Установка начальных остатков -->
                <Button x:Name="btnInitialBalance" 
                        Content="📊 Установка начальных остатков"
                        Tag="SettingTheInitialBalances"
                        Click="DocumentTypeButton_Click"
                        Background="#1565C0"
                        Foreground="White"
                        Height="50">
                    <Button.ToolTip>
                        <TextBlock Text="Создание документа для установки начальных остатков товаров на складе" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </Button.ToolTip>
                </Button>

                <!-- Поступление товаров -->
                <Button x:Name="btnProductReceipt" 
                        Content="📥 Поступление товаров"
                        Tag="ProductReceipt"
                        Click="DocumentTypeButton_Click"
                        Background="#28a745"
                        Foreground="White"
                        Height="50"
                        Margin="0,10,0,0">
                    <Button.ToolTip>
                        <TextBlock Text="Документ поступления товаров от поставщика" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </Button.ToolTip>
                </Button>

                <!-- Перемещение товаров -->
                <Button x:Name="btnMovement" 
                        Content="🔄 Перемещение товаров"
                        Tag="MovementOfGoods"
                        Click="DocumentTypeButton_Click"
                        Background="#17a2b8"
                        Foreground="White"
                        Height="50"
                        Margin="0,10,0,0">
                    <Button.ToolTip>
                        <TextBlock Text="Документ перемещения товаров между складами" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </Button.ToolTip>
                </Button>

                <!-- Списание товаров -->
                <Button x:Name="btnWriteOff" 
                        Content="📤 Списание товаров"
                        Tag="WriteOffOfGoods"
                        Click="DocumentTypeButton_Click"
                        Background="#ffc107"
                        Foreground="Black"
                        Height="50"
                        Margin="0,10,0,0">
                    <Button.ToolTip>
                        <TextBlock Text="Документ списания испорченных или утерянных товаров" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </Button.ToolTip>
                </Button>

                <!-- Инвентаризация -->
                <Button x:Name="btnInventory" 
                        Content="📋 Инвентаризация"
                        Tag="Inventory"
                        Click="DocumentTypeButton_Click"
                        Background="#6f42c1"
                        Foreground="White"
                        Height="50"
                        Margin="0,10,0,0">
                    <Button.ToolTip>
                        <TextBlock Text="Документ проведения инвентаризации на складе" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка отмены -->
        <Button Grid.Row="2" 
                Content="Отмена" 
                Click="CancelButton_Click"
                HorizontalAlignment="Right"
                Background="#6c757d"
                Foreground="White"
                Width="100"/>
    </Grid>
</Window>