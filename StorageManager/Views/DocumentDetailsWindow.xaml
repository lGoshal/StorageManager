<Window x:Class="StorageManager.Views.DocumentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр документа" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1565C0" CornerRadius="6">
            <StackPanel Margin="15">
                <TextBlock Text="{Binding Document.DocumentType}" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="{Binding Document.DocumentNumber}" 
                           FontSize="14"
                           Foreground="#E3F2FD"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Реквизиты документа" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Document.DocumentDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Статус:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <Border Grid.Row="1" Grid.Column="1" 
                                Background="{Binding Document.StatusBackground}" 
                                CornerRadius="3" 
                                Padding="5,2"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left">
                            <TextBlock Text="{Binding Document.Status}" 
                                       Foreground="{Binding Document.StatusForeground}"
                                       FontWeight="SemiBold"/>
                        </Border>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ответственный:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Document.ResponsibleName}" Margin="0,10,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Склад:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Document.LocationInfo}" Margin="0,10,0,0"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Поставщик:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Document.SupplierName}" Margin="0,10,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Товары" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <DataGrid ItemsSource="{Binding Document.Items}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Height="400">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" 
                                                Binding="{Binding ProductName}" 
                                                Width="200"/>

                            <DataGridTextColumn Header="Количество" 
                                                Binding="{Binding Quantity, StringFormat={}{0:N2}}" 
                                                Width="100"/>

                            <DataGridTextColumn Header="Ед. изм." 
                                                Binding="{Binding UnitOfMeasurementName}" 
                                                Width="80"/>

                            <DataGridTextColumn Header="Характеристика" 
                                                Binding="{Binding CharacteristicName}" 
                                                Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Закрыть" 
                    Click="CloseButton_Click"
                    Background="#6c757d"
                    Foreground="White"
                    Padding="15,8"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>