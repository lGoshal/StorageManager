<UserControl x:Class="StorageManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorageManager"
             xmlns:converters="clr-namespace:StorageManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" 
                                      Opacity="0.1" 
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="Товаров" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="{Binding ProductsCount, StringFormat={}{0:N0}}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="#1565C0"/>
                        <TextBlock Text="{Binding ProductsChange}" 
                                   Foreground="#28a745" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="Складов" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="{Binding WarehousesCount, StringFormat={}{0:N0}}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="#dc3545"/>
                        <TextBlock Text="{Binding WarehousesChange}" 
                                   Foreground="#28a745" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0,5,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="Контрагентов" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="{Binding PartnersCount, StringFormat={}{0:N0}}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="#17a2b8"/>
                        <TextBlock Text="{Binding PartnersChange}" 
                                   Foreground="#28a745" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,10">
                    <StackPanel Margin="20">
                        <TextBlock Text="Документов" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="{Binding DocumentsCount, StringFormat={}{0:N0}}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="#ffc107"/>
                        <TextBlock Text="{Binding DocumentsChange}" 
                                   Foreground="#28a745" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.ColumnSpan="4" Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel Margin="20">
                        <TextBlock Text="Последние документы" 
                                   Style="{StaticResource HeaderStyle}"/>

                        <DataGrid ItemsSource="{Binding RecentDocuments}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  AlternatingRowBackground="#F8F9FA"
                                  Height="300">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Тип" 
                                                    Binding="{Binding DocumentType}" 
                                                    Width="120"/>

                                <DataGridTextColumn Header="Дата" 
                                                    Binding="{Binding FormattedDate}" 
                                                    Width="140"/>

                                <DataGridTextColumn Header="Номер" 
                                                    Binding="{Binding DocumentNumber}" 
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Ответственный" 
                                                    Binding="{Binding Responsible}" 
                                                    Width="180"/>

                                <DataGridTextColumn Header="Локация" 
                                                    Binding="{Binding Location}" 
                                                    Width="220"/>

                                <DataGridTextColumn Header="Контрагент" 
                                                    Binding="{Binding Counterparty}" 
                                                    Width="200"/>

                                <DataGridTemplateColumn Header="Статус" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="{Binding StatusColor}"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>

                        <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔄 Загрузка..." 
                                           FontSize="14" 
                                           Foreground="#6c757d"
                                           Margin="0,0,10,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>