<UserControl x:Class="StorageManager.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorageManager"
             xmlns:converters="clr-namespace:StorageManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#1565C0" 
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Пользователи системы" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="➕ Новый пользователь" 
                                Command="{Binding AddUserCommand}"
                                Background="#28a745"
                                Foreground="White"/>

                        <Button Content="🔄 Обновить" 
                                Command="{Binding LoadUsersCommand}"
                                Background="#6c757d"
                                Foreground="White"
                                Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Margin="0,0,10,0"
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                    Orientation="Horizontal" 
                                    Margin="15,15,15,10">
                            <StackPanel Width="300" Margin="0,0,10,0">
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White"
                                         BorderBrush="#E0E0E0"
                                         Padding="8"/>
                                <TextBlock Text="Поиск по имени, логину..." 
                                           Margin="10,-55,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="#999"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SearchText}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding FilteredUsers}"
                                  SelectedItem="{Binding SelectedUser}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  AlternatingRowBackground="#F8F9FA"
                                  Margin="15,0,15,15">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding UserId}" 
                                                    Width="50"/>

                                <DataGridTextColumn Header="Имя пользователя" 
                                                    Binding="{Binding UserName}" 
                                                    Width="200"/>

                                <DataGridTextColumn Header="Логин" 
                                                    Binding="{Binding Login}" 
                                                    Width="150"/>

                                <DataGridTextColumn Header="Полное имя" 
                                                    Binding="{Binding PersonName}" 
                                                    Width="250"/>

                                <DataGridTemplateColumn Header="Действия" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️" 
                                                        Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Редактировать"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="5"
                                                        Cursor="Hand"/>

                                                <Button Content="🗑️" 
                                                        Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Удалить"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="5"
                                                        Cursor="Hand"
                                                        Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Grid.Column="1" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding FormTitle}" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,20"/>
                            <StackPanel>
                                <TextBlock Text="Основная информация" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Имя пользователя *" 
                                           FontWeight="SemiBold"/>
                                <TextBox Text="{Binding CurrentUser.UserName, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="Логин *" 
                                           FontWeight="SemiBold"
                                           Margin="0,10,0,0"/>
                                <TextBox Text="{Binding CurrentUser.Login, UpdateSourceTrigger=PropertyChanged}"/>
                                <StackPanel Margin="0,20,0,0">
                                    <TextBlock Text="Пароль" 
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                    <StackPanel Orientation="Horizontal" 
                                                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Margin="0,0,0,10">
                                        <Button Content="🔐 Сменить пароль" 
                                                Command="{Binding ChangePasswordCommand}"
                                                Background="#ffc107"
                                                Foreground="Black"
                                                Padding="8,5"
                                                FontSize="12"/>
                                        <TextBlock Text="(Пароль не показывается)"
                                                   Foreground="#666"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Visibility="{Binding ShowPasswordFields, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="Новый пароль *" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,10,0,0"/>
                                        <PasswordBox x:Name="PasswordBox"
                                                     PasswordChanged="PasswordBox_PasswordChanged"
                                                     Margin="0,5,0,10"/>
                                        <TextBlock Text="Подтверждение пароля *" 
                                                   FontWeight="SemiBold"/>
                                        <PasswordBox x:Name="ConfirmPasswordBox"
                                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                                     Margin="0,5,0,0"/>
                                        <TextBlock Text="Минимальная длина: 4 символа" 
                                                   Foreground="#666"
                                                   FontSize="11"
                                                   Margin="0,5,0,10"/>
                                    </StackPanel>
                                </StackPanel>
                                <Border Background="#E3F2FD" 
                                        BorderBrush="#BBDEFB" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,20,0,0">
                                    <StackPanel>
                                        <TextBlock Text="🔒 Безопасность" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#1565C0"/>
                                        <TextBlock Text="Пароли хранятся в зашифрованном виде с использованием соли (SHA-256)"
                                                   Foreground="#1565C0"
                                                   FontSize="11"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right"
                                            Margin="0,30,0,0">
                                    <Button Content="Отмена" 
                                            Command="{Binding CancelCommand}"
                                            Background="#6c757d"
                                            Foreground="White"/>

                                    <Button Content="{Binding SaveButtonText}" 
                                            Command="{Binding SaveUserCommand}"
                                            Background="#28a745"
                                            Foreground="White"
                                            Margin="10,0,0,0"/>
                                </StackPanel>
                                <Border Background="#FFEBEE" 
                                        BorderBrush="#EF9A9A" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,20,0,0"
                                        Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding ErrorMessage}" 
                                               Foreground="#D32F2F" 
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>