<Window x:Class="StorageManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageManager"
        xmlns:converters="clr-namespace:StorageManager.Converters"
        mc:Ignorable="d"
        Title="Storage manager" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" 
                                      Opacity="0.1" 
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="ToolTipService.ShowDuration" Value="1000"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,1,0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Height="80" Background="#1565C0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📦" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Склад+" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="ОСНОВНЫЕ" 
                   FontSize="11" 
                   FontWeight="Bold" 
                   Foreground="#6C757D"
                   Margin="15,20,0,10"/>

                        <Button x:Name="btnDashboard" 
                Content="📊 Панель управления" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <Button x:Name="btnProducts" 
                Content="📦 Товары" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <Button x:Name="btnWarehouses" 
                Content="🏢 Склады" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <TextBlock Text="ДОКУМЕНТЫ" 
                   FontSize="11" 
                   FontWeight="Bold" 
                   Foreground="#6C757D"
                   Margin="15,30,0,10"/>

                        <Button x:Name="btnDocuments" 
                Content="📄 Все документы" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <TextBlock Text="СПРАВОЧНИКИ" 
                   FontSize="11" 
                   FontWeight="Bold" 
                   Foreground="#6C757D"
                   Margin="15,30,0,10"/>
                        <Button x:Name="btnProductTypes" 
                Content="📋 Виды товаров" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <Button x:Name="btnCounterparties" 
                Content="🤝 Контрагенты" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <Button x:Name="btnContracts" 
                Content="📑 Договоры" 
                Style="{StaticResource NavButtonStyle}"
                Click="NavButton_Click"/>

                        <Button x:Name="btnUnits" 
        Content="📏 Единицы измерения" 
        Style="{StaticResource NavButtonStyle}"
        Click="NavButton_Click"/>

                        <Button x:Name="btnCharacteristics" 
        Content="🔤 Характеристики" 
        Style="{StaticResource NavButtonStyle}"
        Click="NavButton_Click"/>

                        <Button x:Name="btnUsers" 
        Content="👤 Пользователи" 
        Style="{StaticResource NavButtonStyle}"
        Click="NavButton_Click"/>

                        <Button x:Name="btnAddresses" 
        Content="📍 Адреса" 
        Style="{StaticResource NavButtonStyle}"
        Click="NavButton_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="pageTitle" 
                   Text="Панель управления" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <StackPanel x:Name="QuickActionsPanel" 
                        Orientation="Horizontal"
                        Visibility="{Binding IsDashboard, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button Content="➕ Новый товар" 
                        Click="BtnNewProduct_Click"
                        Background="#1565C0" 
                        Foreground="White"
                        Padding="15,8"
                        FontSize="14"
                        BorderThickness="0"
                        Margin="0,0,10,0"/>

                            <Button Content="📄 Новый документ" 
                        Click="BtnNewDocument_Click"
                        Background="#28a745" 
                        Foreground="White"
                        Padding="15,8"
                        FontSize="14"
                        BorderThickness="0"
                        Margin="0,0,10,0"/>

                            <Button Content="🔄 Обновить" 
                        Click="BtnRefresh_Click"
                        Background="#6c757d" 
                        Foreground="White"
                        Padding="25,8"
                        FontSize="14"
                        BorderThickness="0"/>
                        </StackPanel>
                        <Button x:Name="btnNotifications" 
                    Content="ℹ️" 
                    ToolTip="О программе"
                    Click="BtnNotifications_Click"
                    Style="{StaticResource NavButtonStyle}" 
                    Width="50" 
                    Height="40" 
                    FontSize="16"/>

                        <TextBlock Text="{Binding CurrentUser.UserName}"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="20,0,0,0"
                       Foreground="#666"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Frame x:Name="MainFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>