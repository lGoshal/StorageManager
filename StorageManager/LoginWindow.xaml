<Window x:Class="StorageManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вход в систему управления складом" 
        Height="650" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A3D8F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                <Setter Property="Foreground" Value="#90A4AE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RegisterButtonStyle" TargetType="Button" BasedOn="{StaticResource LoginButtonStyle}">
            <Setter Property="Background" Value="#28a745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1e7e34"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#C3E6CB"/>
                    <Setter Property="Foreground" Value="#90A4AE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LoginLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Border Background="Transparent" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                              Opacity="0.3" 
                              ShadowDepth="3" 
                              Color="Black"/>
        </Border.Effect>

        <Grid>
            <Border Margin="0,0,0,510" Background="#1565C0" CornerRadius="10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📦" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- Название системы -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="СИСТЕМА" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text=" УПРАВЛЕНИЯ" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   Margin="5,0,0,0"/>
                        <TextBlock Text=" СКЛАДОМ" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#BBDEFB"/>
                    </StackPanel>

                    <!-- Версия -->
                    <TextBlock Text="Версия 1.0.0" 
                               FontSize="11" 
                               Foreground="#E3F2FD" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Форма входа -->
            <Border Background="White" Margin="40,120,40,40" CornerRadius="10">
                <Grid>
                    <!-- Основное содержимое -->
                    <StackPanel VerticalAlignment="Center" Margin="30,40">
                        <!-- Заголовок формы -->
                        <TextBlock Text="ВХОД В СИСТЕМУ" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#1565C0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

                        <!-- Поле логина -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Имя пользователя" Style="{StaticResource LoginLabelStyle}"/>
                            <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource LoginTextBoxStyle}"
                         VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Поле пароля -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Пароль" Style="{StaticResource LoginLabelStyle}"/>
                            <PasswordBox x:Name="PasswordBox" 
                             VerticalAlignment="Center"
                             Height="40"
                             Padding="10"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"/>
                        </StackPanel>

                        <!-- Кнопка входа -->
                        <Button x:Name="LoginButton" 
                    Content="ВОЙТИ" 
                    Style="{StaticResource LoginButtonStyle}"
                    Click="LoginButton_Click"
                    Margin="0,0,0,20"/>

                        <!-- Кнопка регистрации -->
                        <Button x:Name="RegisterButton" 
                    Content="РЕГИСТРАЦИЯ" 
                    Style="{StaticResource RegisterButtonStyle}"
                    Click="RegisterButton_Click"
                    Margin="0,0,0,20"/>
                    </StackPanel>

                    <!-- Сообщение об ошибке - ПОВЕРХ основного содержимого -->
                    <Border x:Name="ErrorBorder" 
                Background="#FFEBEE" 
                BorderBrush="#EF9A9A" 
                BorderThickness="1" 
                CornerRadius="4"
                Padding="12,8"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Width="320">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" 
                           FontSize="14" 
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
                            <TextBlock x:Name="ErrorMessageTextBlock" 
                           Text="" 
                           Foreground="#D32F2F" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           MaxWidth="260"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Кнопка закрытия (в правом верхнем углу) -->
            <Button x:Name="CloseButton" 
                    Content="✕" 
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,15,15,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFFFF"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>